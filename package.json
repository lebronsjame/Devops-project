{
  "name": "devops-project",
  "version": "1.0.0",
  "description": "Devop project. Benjamin, Nathaniel and Pavian",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand --silent",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:pw": "playwright test",
    "test:pw:coverage": "node scripts/instrument-frontend.js && rimraf .nyc_output && cross-env STATIC_DIR=public-coverage npx playwright test && nyc report --reporter=text-summary --reporter=html --report-dir coverage/frontend",
    "start:coverage-ui": "cross-env STATIC_DIR=public-coverage node server.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "utils/SkillPostUtil.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/e2e/",
      "<rootDir>/tests-e2e/",
      "<rootDir>/playwright-report/",
      "<rootDir>/test-results/"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.6",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "rimraf": "^6.1.2",
    "supertest": "^7.2.2"
  }
}
